<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_communication_line"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ivan.kopeykin.opticalcharacteristicscalc.CommunicationLineActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="ширина полосы спектра передаваемого сигнала"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView2"
            android:layout_weight="0.04"
            android:paddingTop="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите ширину в ГГц"
            android:ems="10"
            android:id="@+id/editTextdeltaF"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewF"
            android:inputType="text" />

        <TextView
            android:text="несущая частота, на которой осуществляется передача информации"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textViewF"
            android:layout_weight="0.04"
            android:paddingTop="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите частоту в ГГц"
            android:ems="10"
            android:id="@+id/editTextF"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewF"
            android:inputType="text" />

        <TextView
            android:text="длина волоконно-оптической линии"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView"
            android:layout_weight="0.04"
            android:paddingTop="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите длину в км"
            android:ems="10"
            android:id="@+id/editTextLength"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewF"
            android:inputType="text" />

        <Button
            android:text="Сохранить"
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSubmitCommunicationLine"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="70dp" />
    </LinearLayout>

</RelativeLayout>
